<div class="container">
  <h1>Goat List</h1>

  <div class="cards">
    <% @goats.each do |goat| %>
      <div class="card">
        <%= cl_image_tag(goat.image_url, class: "card-img-top") %>
        <div class="card-body">
          <h5 class="card-title"><%= goat.name %></h5>
          <span class="badge text-bg-info"><%= goat.category %> Goat</span>
          <p class="card-text"><%= goat.description %></p>
          <%= link_to goat_path(goat.id), class: "card-link btn btn-primary position-relative", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            Book <%= goat.name %> <i class="fa-solid fa-cart-plus"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
