
  <%= link_to "<", goats_path, class: "returnbtn btn btn-primary" %>
  <div class="p-4 p-md-5 mb-4 rounded text-bg-dark flex">
  <div class="row g-5 justify-content-center">
    <div class="banner_show col-12 col-lg-8 px-4">
      <h1 class=" display-4 fst-italic"><%= @goat.name %></h1>
      <div class="d-flex justify-content-center align-items-center" style="height: 79%;">
        <p class="lead my-3"><%= @goat.description %></p>
      </div>
      </div>
         <div class="col-12 col-lg-4 order-first order-lg-last">
          <%= cl_image_tag(@goat.image_url, class: "banner_img", width: 250, crop: :fill) %>
        </div>
    </div>
    </div>

  <div class="row g-5">
    <div class="col-md-8">
      <div class="row">
        <div class="col-12">
          <div class="card rounded border w-100" style="border-radius: 10px!important;">
            <div class="card-body">
              <h5 class="card-title">Rating:
                <% @goat.rating.round(0).times do %>
                  <i class="fa-solid fa-star" style="font-size: 15px; color:#FFC978"></i>
                <% end %>
                <% (5 - @goat.rating.round(0)).times do %>
                  <i class="fa-regular fa-star"></i>
                <% end %>
              </h5>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class="card rounded border w-100" style="border-radius: 10px!important;">
            <div class="card-body">
              <h5 class="card-title">Location:
                <strong><%= @goat.address %></strong>
              </h5>
            </div>
          </div>
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-sm-6">
          <div class="card rounded border w-100 h-100" style="border-radius: 10px!important;">
            <div class="card-body text-center">
            <i class="fa-regular fa-face-grin-tongue-squint fs-2 text-primary mb-2"></i>
              <h5 class="card-title">Anti-Spit Training</h5>
              <p class="card-text" style="color: #7b7878; margin-top: 17px;">With supporting text below as a natural lead-in to additional content.</p>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card rounded border w-100  h-100" style="border-radius: 10px!important;">
            <div class="card-body text-center">
            <i class="fa-solid fa-car-burst fs-2 text-primary mb-2"></i>
              <h5 class="card-title">Comprehensive insurance coverage</h5>
              <p class="card-text" style="color: #7b7878; margin-top: 17px;">With supporting text below as a natural lead-in to additional content.</p>
            </div>
          </div>
        </div>
      </div>
      <div class="row mb-4">
        <div class="col-sm-6">
          <div class="card rounded border w-100 h-100" style="border-radius: 10px!important;">
            <div class="card-body text-center">
            <i class="fa-solid fa-earth-europe fs-2 text-primary mb-2"></i>
              <h5 class="card-title">Bio-Green Certified</h5>
              <p class="card-text" style="color: #7b7878; margin-top: 17px;">With supporting text below as a natural lead-in to additional content.</p>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card rounded border w-100  h-100" style="border-radius: 10px!important;">
            <div class="card-body text-center">
            <i class="fa-solid fa-utensils fs-2 text-primary mb-2"></i>
              <h5 class="card-title">1 Acre/hour</h5>
              <p class="card-text" style="color: #7b7878; margin-top: 17px;">With supporting text below as a natural lead-in to additional content.</p>
            </div>
          </div>
        </div>
      </div>

